<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CoronaWidget.Widget.Background" parent="Theme.CoronaWidget">
        <item name="android:background">@color/background</item>
    </style>

    <style name="Theme.CoronaWidget.Widget.Text" parent="Theme.CoronaWidget">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.CoronaWidget.Widget.Text.Title" parent="Theme.CoronaWidget.Widget.Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.CoronaWidget.Widget.Text.Main" parent="Theme.CoronaWidget.Widget.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.CoronaWidget.Widget.Text.Sub" parent="Theme.CoronaWidget.Widget.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>